/* pages/detail-search/index.wxss */
page {
  padding: 0 20rpx;
  padding-top:112rpx ;
  background-color:#fafafa;
}

/*搜索框*/
.search{
  position: fixed;
  top: 0;
  left: 20rpx;
  right: 20rpx;
}

/*热门搜索*/
.hot {
  padding: 10rpx;
}

.hot .list{
  display: flex;
  flex-wrap: wrap;
}

.hot .tag{
  font-size: 26rpx;
  background-color: #fff;
  padding: 10rpx 10rpx;
  border-radius: 25rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
}

.hot .tag:first-of-type {
  color: #c03636;
}

/* 建议搜索 */
.suggest {
  padding: 30rpx;
}

.suggest .title {
  color: #c03636;
  font-size: 34rpx;
  font-weight: 700;
}

.suggest .item {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.suggest .item .icon {
  width: 66rpx;
  margin-left: -20rpx;
}

.suggest .item .text {
  font-size: 28rpx;
}

/* 搜索结果 */
.result .title {
  font-size: 32rpx;
  color: #c03636;
}
